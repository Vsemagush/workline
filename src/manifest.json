{
  "name": "Work line",
  "description": "",
  "manifest_version": 2,
  "version": "1.0.0",
  "minimum_chrome_version": "77",

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "background": {
    "scripts": ["background/bundle.js"],
    "persistent": true
  },

  "permissions": ["activeTab", "tabs", "https://online.sbis.ru/"],

  "content_scripts": [
    {
      "matches": ["https://online.sbis.ru/"],
      "js": ["content/bundle.js"],
      "run_at": "document_start"
    }
  ],

  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  }
}
