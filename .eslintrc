{
   "env": {
      "browser": true,
      "es6": true
   },
   "extends": ["eslint:recommended", "plugin:react/recommended"],
   "plugins": ["react-hooks"],
   "parserOptions": {
      "ecmaFeatures": {
         "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
   },
   "settings": {
      "react": {
         "version": "detect"
      }
   },
   "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
   },
   "overrides": [
      {
         "files": ["*.js"],
         "rules": {
            "react/prop-types": "off"
         }
      }
   ],
   "globals": {
      "chrome": "readonly"
   }
}
